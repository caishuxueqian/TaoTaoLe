<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/top_iv"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:src="@drawable/animal_3" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:gravity="center"
        android:padding="10dp">

        <TableRow
            android:layout_height="80dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/t1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/shiping30" />

            <ImageView
                android:id="@+id/t2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/dianqi11" />

            <ImageView
                android:id="@+id/t3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/yifu1" />

            <ImageView
                android:id="@+id/t4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/shuma12" />

            <ImageView
                android:id="@+id/t5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/shuma31" />

        </TableRow>

        <TableRow
            android:layout_height="123dp"
            android:gravity="center">

            <TextView
                android:id="@+id/t6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:paddingLeft="6dp"
                android:text="食品"
                 />

            <TextView
                android:id="@+id/t7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:paddingLeft="6dp"
                android:text="家电"
               />

            <TextView
                android:id="@+id/t8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:paddingLeft="6dp"
                android:text="服装"
                />

            <TextView
                android:id="@+id/t9"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="15dp"
                android:text="学习"
               />

            <TextView
                android:id="@+id/t10"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="15dp"
                android:paddingLeft="7dp"
                android:text="充值"
              />
        </TableRow>

        <TextView
            android:id="@+id/top_tuijian"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="150dp"
            android:background="@drawable/shape_blue"
            android:padding="1dp"
            android:text="                       今日推荐"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />
    </TableLayout>

</LinearLayout>
