<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D8D8D8"
 >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/main_color">
        <ImageView
            android:id="@+id/detail_bt_back"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="0dp"
            android:layout_gravity="center"
            android:src="@drawable/back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:text="商品详情"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/detail_iv"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/animal_3"
      />

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:backgroundTintMode="add"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/shape"
        >

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格"/>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textColor="@color/red"/>
        <TextView
            android:id="@+id/detail_tv_money"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text="10"
            android:textStyle="bold"
            android:textSize="30dp"/>

            <TextView
                android:id="@+id/detail_tv_describe"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="桂林崽种"
                android:textSize="18dp"/>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="库存:"
            android:textSize="13dp"

         />
        <TextView
            android:textStyle="bold"
            android:id="@+id/detail_tv_number"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textSize="13dp"
            android:textColor="@color/main_color"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
    <Button
        android:id="@+id/detail_bt_cart"
        android:layout_marginTop="20dp"
       android:background="@drawable/shape_orange"
        android:layout_marginRight="40dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="加入购物车"
        android:textStyle="bold"
        android:textColor="@color/white"/>
    <Button
        android:id="@+id/detail_bt_buy"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_blue"
        android:layout_marginLeft="40dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="立即购买"
        android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>
